{
  "version": "0.2.0",
  "configurations": [

    {
      "name": "minisim: Core Dump Debug",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/minisim",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "coreDumpPath": "${input:coreDumpPathMinisim}",
      "miDebuggerPath": "/usr/bin/gdb"
    },
    {
      "name": "(gdb) Attach Minisim",
      "type": "cppdbg",
      "request": "attach",
      "program": "${workspaceFolder}/build/minisim",
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Set Disassembly Flavor to Intel",
          "text": "-gdb-set disassembly-flavor intel",
          "ignoreFailures": true
        }
      ]
    },
    {
      "name": "(gdb) autoc Launch",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/autoc",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/autoc",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "preLaunchTask": "make", // Add this line
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Set Disassembly Flavor to Intel",
          "text": "-gdb-set disassembly-flavor intel",
          "ignoreFailures": true
        }
      ]
    },
    {
      "name": "(gdb) minisim Launch",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/minisim",
      "args": [
        "1234"
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/autoc",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      //"preLaunchTask": "make", // Add this line
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Set Disassembly Flavor to Intel",
          "text": "-gdb-set disassembly-flavor intel",
          "ignoreFailures": true
        }
      ]
    }
  ],
  "inputs": [
    {
      "id": "programPath",
      "type": "promptString",
      "description": "Enter the path to the program executable",
      "default": "${workspaceFolder}/your_program"
    },
    {
      "id": "coreDumpPathMinisim",
      "type": "promptString",
      "description": "Enter the path to the core dump file",
      "default": "/mnt/wslg/dumps/core.minisim."
    }
  ]
}